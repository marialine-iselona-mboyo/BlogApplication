@model BlogApp.Models.Category

@{
    ViewData["Title"] = "Delete";
}

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">
                Delete Category
            </h2>
            <hr />
            <h4>Are you sure you want to delete this?</h4>
        </div>
        <!--To display all the errors in a summary, on the top-->
        @*<div asp-validation-summary="All"></div>*@
        <div class="mb-3 row p-1">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" disabled class="form-control" />
        </div>
        <button type="submit" class="btn btn-danger form-control" style="width:150px">
            Delete
        </button>
        <a asp-action="Index"
           class="btn btn-primary" style="width:150px">
            Back to List
        </a>
    </div>
</form>
