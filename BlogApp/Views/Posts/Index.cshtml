@model IEnumerable<BlogApp.Models.Post>

@{
    ViewData["Title"] = "Index";
}

<div class="row pt-4 pb-3">
    <div class="col-6">
        <h2 class="text-primary">
            Posts List
        </h2>
    </div>
    @if (User.IsInRole("Admin"))
    {
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Create New Post
            </a>
        </div>
    }

</div>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Title)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Author)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Body)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Author)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Body)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CreatedAt)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Category.Name)
                </td>
                <td>
                    @*                     <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary mx-2">Edit</a>
                *@                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary mx-2">Details</a>
                    @*                     <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger mx-2">Delete</a>
                *@
                </td>
            </tr>
        }
    </tbody>
</table>
